    transition: transform 0.3s ease;
    font-weight: 500;
}

.toast.show {
    transform: translateX(0);
}

.toast.success { background: #4CAF50; }
.toast.error { background: #f44336; }
.toast.info { background: #2196F3; }
.toast.warning { background: #FF9800; }

/* Buttons */
.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s;
    text-align: center;
    justify-content: center;
}

.btn-primary {
    background: #0085C7;
    color: white;
}

.btn-primary:hover {
    background: #0069A3;
}

.btn-secondary {
    background: #f44336;
    color: white;
}

.btn-secondary:hover {
    background: #d32f2f;
}

.btn-outline {
    background: transparent;
    color: #0085C7;
    border: 2px solid #0085C7;
}

.btn-outline:hover {
    background: #0085C7;
    color: white;
}

.btn-sm {
    padding: 8px 16px;
    font-size: 0.8rem;
}

/* Responsive */
@media (max-width: 768px) {
    .charts-grid {
        grid-template-columns: 1fr;
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .admin-tabs {
        flex-direction: column;
    }
    
    .article-header {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .article-actions {
        align-self: flex-end;
    }
    
    .contact-header, .comment-header, .subscriber-header {
        flex-direction: column;
        gap: 10px;
    }
}
/* Accessibility - Add to top of your CSS */
.skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: #0085C7;
    color: white;
    padding: 8px;
    z-index: 10000;
    text-decoration: none;
}
.skip-link:focus { top: 6px; }

:focus {
    outline: 2px solid #0085C7;
    outline-offset: 2px;
}

/* Mobile touch targets - Add to your existing button styles */
.nav-links a, .btn {
    min-height: 44px;
    display: flex;
    align-items: center;
}

/* Mobile menu - Add to your existing media queries */
@media (max-width: 768px) {
    .nav-links {
        position: fixed;
        top: 0;
        left: -100%;
        width: 80%;
        height: 100vh;
        background: white;
        flex-direction: column;
        padding: 2rem;
        transition: left 0.3s ease;
        z-index: 1000;
    }
    .nav-links.active { left: 0; }
}

.logo-image {
    height: 50px;
    width: auto;
}